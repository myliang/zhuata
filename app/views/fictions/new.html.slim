= alert(@fiction)
.module.border
  .header
    h5= t_form_title(@fiction, "create")
  .body
    = form_for(@fiction, url: fictions_path, html: {class: "form"}) do |f|
      =f.hidden_field :author
      =f.hidden_field :title
      =f.hidden_field :text
      .fr
        = f.label :url, class: "label"
        .fd
          = f.text_field :url, style: "width: 80%;"
          span.help.block
            = t("attributes.fiction.support")
      .form-actions
        = f.submit t_submit("save"), class: "btn blue"

- content_for :sidebar do
  = render partial: "partials/new"
  .module.border
    = render partial: "users/show_base", locals: {user: current_user}
