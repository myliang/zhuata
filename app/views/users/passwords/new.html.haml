.box.left
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), 
    :html => { :method => :post, :class => "form-horizontal" }) do |f|
    = devise_error_messages!
    %legend 
      = t("devise.base.forget_password") 
    .control-group
      = f.label :email, :class => "control-label"
      .controls
        = f.email_field :email
    .form-actions
      = f.submit t("devise.base.reset_password"), :class => "btn btn-primary"
= render "users/shared/links"
